{
  "model": {
    "fc_model": {
      "sizes": [96],
      "input_norm": false,
      "activation": null,
      "dropout": 0.0
    },
    "transformer": {
      "N": 2,
      "d_ff": 384,
      "h": 1,
      "positional_encoding" : null,
      "dropout": 0.1
    },
    "post_model": {
      "output_activation": null,
      "d_output": 1
    }
  },
  "data": {
    "path": "./datasets/ltrc_yahoo/",
    "validation_ds_role": "test",
    "num_workers": 1,
    "batch_size": 64,
    "slate_length": 40
  },
  "optimizer": {
    "name": "Adam",
    "args": {
      "lr": 0.0001
    }
  },
  "lr_scheduler": {
    "name": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.5
    }
  },
  "training": {
    "epochs": 100,
    "early_stopping_patience": 100,
    "gradient_clipping_norm": null
  },
  "val_metric": "ndcg_5",
  "metrics": [
    "ndcg_1",
    "ndcg_3",
    "ndcg_5"
  ],
  "loss": {
    "name": "NDCG_M",
    "args": {
      "enable_u": true,
      "gamma": 0.3,
      "topk": -1
    }
  },
  "detect_anomaly": false,
  "expected_metrics" : {
    "val": {
      "ndcg_5": 0.5
    }
  }
}
